<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/marg_lrg"
    android:layout_weight="2"
    android:orientation="vertical"
    android:padding="@dimen/pad_XS"
    tools:context=".InputActivity">


    <EditText
        android:id="@+id/ET_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limiter_edittext"
        android:hint="@string/et_hint_book_title"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/ET_author"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limiter_edittext"
        android:hint="@string/et_hint_author"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/ET_Supplier"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limiter_edittext"
        android:hint="@string/et_hint_supplier"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/ET_Supplier_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limiter_edittext"
        android:layout_marginBottom="@dimen/marg_lrg"
        android:hint="@string/et_hint_supplier_tel"
        android:inputType="number" />


    <EditText
        android:id="@+id/ET_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limiter_edittext"
        android:hint="@string/et_hint_price"
        android:inputType="number" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_XS">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/tv_stock_qty"
            android:textSize="@dimen/tv_txt_L" />

        <Button
            android:id="@+id/btn_stock_down"
            android:layout_width="@dimen/limiter_btn"
            android:layout_height="@dimen/limiter_btn"
            android:contentDescription="@string/txt_access_decrease_stock"
            android:text="-" />

        <EditText
            android:id="@+id/ET_stock_qty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/limiter_edittext"
            android:layout_weight="2"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/pad_XS"
            android:text="0" />

        <Button
            android:id="@+id/btn_stock_up"
            android:layout_width="@dimen/limiter_btn"
            android:layout_height="@dimen/limiter_btn"
            android:contentDescription="@string/txt_access_increase_stock"
            android:text="+" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/pad_XS">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/limiter_btn"
            android:layout_margin="@dimen/marg_med"
            android:layout_weight="1"
            android:text="@string/txt_btn_cancel" />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/limiter_btn"
            android:layout_margin="@dimen/marg_med"
            android:layout_weight="1"
            android:text="@string/txt_btn_save" />
    </LinearLayout>


</LinearLayout>